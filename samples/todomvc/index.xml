	<script>
		var loadTodos = function(){
			var todo1 = new Todo();
			todo1.name = "hoge";
			todo1.create();
			var todo2 = new Todo();
			todo2.name = "fuga";
			todo2.create();
			return [todo1, todo2];
		};
	
		var id = 5;
		var createId = function(){
			return id++;
		};
		var Todo = function(){
			this.name = "";
			this.done = false;
		};
		Todo.prototype.create = function(){
			this.id = createId();
		};
		var editingTodo = null;
		
		scope.newTodo = {}
		scope.todos = loadTodos();
		editingTodo = scope.todos[1];
	
	
